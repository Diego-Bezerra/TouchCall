<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorPrimary">@color/gray_border</item>
        <item name="colorPrimaryDark">@color/gray_pager</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="progressBarTheme" parent="AppTheme">
        <item name="colorAccent">@color/gray_border</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editTextTheme">
        <item name="colorAccent">@color/gray_border</item>
    </style>

</resources>
